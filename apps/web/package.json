{
  "name": "web",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "test": "vitest",
    "cron": "tsx watch --env-file=.env --trace-deprecation src/cron.ts",
    "resource-circular-deps": "tsx  src/config/index.ts",
