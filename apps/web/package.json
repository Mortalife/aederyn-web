    "p-debounce": "^5.1.0",
    "tsx": "^4.19.2",
    "vitest": "^4.0.15"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.1",
    "@hono/vite-dev-server": "^0.23.0",
    "@types/node": "24",
    "autoprefixer": "^10.4.20",
    "daisyui": "^4.12.23",
    "postcss": "^8.4.49",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.17",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vite": "^6.4.1"
